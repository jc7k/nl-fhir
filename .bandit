# Bandit Security Configuration for NL-FHIR
# Production healthcare application - strict security standards

[bandit]
# Exclude test files and virtual environments
exclude_dirs = ['/tests/', '/.venv/', '/build/', '/dist/']

# Test for all security issues
tests = ['B201', 'B301', 'B302', 'B303', 'B304', 'B305', 'B306', 'B307', 'B308', 'B309', 'B310', 'B311', 'B312', 'B313', 'B314', 'B315', 'B316', 'B317', 'B318', 'B319', 'B320', 'B321', 'B322', 'B323', 'B324', 'B325', 'B401', 'B402', 'B403', 'B404', 'B405', 'B406', 'B407', 'B408', 'B409', 'B410', 'B411', 'B412', 'B413', 'B501', 'B502', 'B503', 'B504', 'B505', 'B506', 'B507', 'B601', 'B602', 'B603', 'B604', 'B605', 'B606', 'B607', 'B608', 'B609', 'B610', 'B611', 'B701', 'B702', 'B703']

# Severity levels to report
# HIGH - critical security issues that must be fixed
# MEDIUM - significant security concerns
# LOW - minor issues (informational)
severity = ['HIGH', 'MEDIUM']

# Confidence levels to report
# HIGH - very confident in the finding
# MEDIUM - reasonably confident
# LOW - possible issue
confidence = ['HIGH', 'MEDIUM']

[bandit.skips]
# Skip specific tests if needed (use sparingly)
# B101 - assert_used (OK in test files, excluded via exclude_dirs)
# B601 - paramiko_calls (not using paramiko)
# B602 - shell_injection (using subprocess safely with arrays)
